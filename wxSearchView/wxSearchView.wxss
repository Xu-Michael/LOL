/** 整个区域 */
.wxSearch{
  position: absolute;
  top: 43px;
  left: 0;
  width: 100%;
  height: 100%;
  /* border-top: 1px #eee solid; */
  /* background-color: rgba(200, 200, 200, 0.1); */
  z-index: 9999;
}

/** 搜索框下面的提示区域 */
.wxSearchInner{
  /* background-color: #fff; */
}

/** 搜索热点标题 */
.wxSearchTitle{
  display: block;
  padding: 10rpx 0 10rpx 0; 
  font-size: 13px;
  text-align: left;
  margin: 40rpx 0 20rpx 45rpx;
  color: #FC5736;
  font-size: 35rpx;
  /* border-bottom: 5rpx solid #FC5736; */
  width: 40%;
}

/** 提示样式 */
.wxSearchMindKeyItem{
  padding: 10px 5px 10px 15px;
  margin-left: 10px;
  /* border-bottom: 1px solid #eee; */
  display: flex;
  font-size: 13px;
}

/** 标签样式 */
.wxSearchKeyList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly;
  align-items:center;
  /* border-bottom: 1px solid #eee; */
}


/** 标签样式 */
.wxSearchKeyItem{
  flex: 0 0 18%;
  font-size: 30rpx;
  text-align: center;
  border: 1px solid #a1a0a0;
  color: #a1a0a0;
  margin: 5px;
  padding: 10rpx 15rpx;
  border-radius: 2px;
  /* background-color: rgba(200, 200, 200, 0.1); */
}

.wxSearchHistory {
  position: relative;
}

/** 搜索记录标题栏 */
.wxSearchHistoryItem{
  /* padding-left: 10px;
  padding-top: 10px;
  padding-right: 5px;
  padding-bottom: 5px;
  display: flex; */
  display: block;
  padding: 10rpx 0 10rpx 0; 
  font-size: 13px;
  text-align: left;
  margin: 40rpx 0 20rpx 45rpx;
  color: #FC5736;
  font-size: 35rpx;
  /* border-bottom: 5rpx solid #FC5736; */
  width: 43%;
}

/** 搜索记录标题 */
.wxSearchHistoryItemTitle{
  flex: 8;
  font-size: 35rpx;
}

/** 搜索记录删除按钮 */
.wxSearchHistoryItemDel{
  flex: 1;
  font-size: 13px;
  text-align: center;
  padding-top:2px;
  padding-bottom: 2px;
  border: 1px solid #eee;
  border-radius: 2px;
}

