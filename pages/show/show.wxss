page {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

video {
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  width: 100%;
  height: 39%;
  box-shadow: 0px 30px 30px -20px rgba(0,0,0,0.2);
}

.content-wrapper {
  display: block;
}

.user-info {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.avatar {
  border-radius: 50%;
  height: 150rpx;
  width: 150rpx;
  margin-left: 30rpx;
}

.user-name {
  font-size: 45rpx;
  font-weight: bolder;
  margin-right: 30rpx;
  margin-left: 30rpx;
}

.tagicon-container {
  display: flex;
  align-items: center;
  height: 150rpx;
  font-size: 50rpx;
  font-weight: bolder;
}

#tag-icon {
  height: 60rpx;
  width: 120rpx;
}

.key-list-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.wxSearchKeyList{
  /* width: 90%; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: start;
  align-items:center;
  margin: 40rpx 0rpx;
}

/** 标签样式 */
.wxSearchKeyItem{
  /* flex: 0 0 18%; */
  font-size: 30rpx;
  text-align: center;
  border: 1px solid #a1a0a0;
  color: #a1a0a0;
  margin: 5px;
  padding: 0 15rpx 5rpx 15rpx;
  border-radius: 2px;
  /* background-color: rgba(200, 200, 200, 0.1); */
}

.button-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  /* width: 100%;
  height: 250rpx;
  position: absolute;
  bottom: 90rpx; */
}

.action-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 0 0 33%;
}

.show-icon {
  height: 100rpx;
  width: 100rpx;
}

.icon-text {
  font-size: 50rpx;
}