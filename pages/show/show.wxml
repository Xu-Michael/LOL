<view class="show-container" style="background: linear-gradient(rgba(30, 27, 38, 0.9), rgba(30, 27, 38, 0.9)), url('{{image}}')">
  <view class="card-container">
    <view class="card-gif" style="background: url('{{image}}')">
      <view class="collected">
        <image class="icon-heart" src="../../image/icon-heart.png"/>
        {{ collected }}
      </view>
    </view>
    <view class="details-container">
      <view class="tag">{{tag}}</view>
    </view>
    <view class="button-container">
      <view class="button" bindtap="editGif" data-id="{{id}}">
        Edit Gif
      </view>
      <view class="button" bindtap="deleteGif" data-id="{{id}}">
        Delete Gif
      </view>
      <view class="button">
        Save To Phone
      </view>
    </view>
  </view>
</view>
