

<view class="show-container" style="background: linear-gradient(rgba(30, 27, 38, 0.9), rgba(30, 27, 38, 0.9)), url('')">
  <view class="card-container">
    <view class="card-gif">
      <video class="video" src="{{video.image}}" loop autoplay controls="{{false}}" objectFit="fill"></video>
      <!-- <view class="collected">
        <image class="icon-heart" src="../../image/white/favorite.png"/>
        {{ collected }}
      </view> -->
      <view class="details-container">
        <image class="icon-heart" src="../../image/orange/tag2.png"/>
        <scroll-view class="scroll-view_H" scroll-x="true" bindscroll="scroll" style="width: 100%">
          <view wx:for="{{tags}}" wx:for-item="tag" wx:key="tag.id" class="scroll-view-item_H black">
            <view>{{tag.name}}</view>
          </view>
          <!-- <view id="demo1" class="scroll-view-item_H demo-text-1"></view> -->
          <!-- <view id="demo2"  class="scroll-view-item_H demo-text-2"></view>
          <view id="demo3" class="scroll-view-item_H demo-text-3"></view> -->
        </scroll-view>
      </view>
    </view>


    <view class="button-container">
      <view class="submit-button" bindtap="editGif" data-id="{{id}}">
        Edit Gif
      </view>
      <view class="submit-button" bindtap="deleteGif" data-id="{{id}}">
        Delete Gif
      </view>
      <view class="submit-button">
        Save To Phone
      </view>
    </view>


  </view>
</view>







