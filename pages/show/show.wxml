    <view class="taglabel">

          <view class="collected">
          <image class="icon-heart" src="../../image/icon-camera-selected.png"/>
           <view class="collectnum">1000</view>
          </view>

          <!-- <view class="borderbox" /> -->
        </view>

    <view class="lower-container">




    <scroll-view class="scroll-view_H" scroll-x="true" bindscroll="scroll" style="width: 100%">
      <view class="flex">
      <view class="collected tag-space">
          <image class="icon-heart" src="../../image/icon-camera-selected.png"/>
          </view>
      <view wx:for="{{tags}}" wx:for-item="tag" wx:key="tag.id" class="scroll-view-item_H black">
      <view>{{tag.name}}</view>
      </view>
      </view>
      <!-- <view id="demo1" class="scroll-view-item_H demo-text-1"></view> -->
