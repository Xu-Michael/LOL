<view class="show-container" style="background: linear-gradient(rgba(30, 27, 38, 0.9), rgba(30, 27, 38, 0.9)), url('')">
  <view class="card-container">
    <view class="card-gif">
      <video class="video" src="{{video.image}}" loop autoplay controls="{{false}}"></video>
      <view class="collected">
        <image class="icon-heart" src="../../image/white/favorite.png"/>
        {{ collected }}
      </view>
    </view>
    <view class="details-container">
      <view class="tag">{{tags}}</view>
    </view>
    <view class="button-container">
      <view class="button" bindtap="editGif" data-id="{{id}}">
        Edit Gif
      </view>
      <view class="button" bindtap="deleteGif" data-id="{{id}}">
        Delete Gif
      </view>
      <view class="button">
        Save To Phone
      </view>
    </view>
  </view>
</view>
