    </scroll-view>



  </view>


   <view class="button-container">

      <view class="button" bindtap="editGif" data-id="{{id}}">
        Add Tag
      </view>
      <view class="button" bindtap="deleteGif" data-id="{{id}}">
        Add to Collection
      </view>
      <view class="button">
        Save To Phone
      </view>
    </view>


  </view>
</view>







