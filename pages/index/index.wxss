@import "../../wxSearchView/wxSearchView.wxss";

/* Cards */
 .card-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding: 20rpx;
} 

.gif-container {
  display: flex;
  flex-items: space-around;
  justify-content: center;
  flex-direction: column;
  width: 350rpx;
  position: relative;
}

.gif-details {
  display: flex;
  flex-items: center;
  justify-content: center;
}

.card {
  height: 300rpx;
  width: 330rpx;
  text-shadow: 0 1rpx 3rpx rgba(0,0,0,0.8);
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
  margin: 10rpx; 
  position: relative;
  background: #fff;
   border-radius: 5px; 
   /* padding: 2em 0;  */
   /* box-sizing: border-box;  */
  transition: .3s ease;
  box-shadow: 0 3px 10px -2px rgba(0, 0, 0, 0.35);
  object-fit: cover;
}
.card > video {
  position: absolute;
  top: 50%; 
  left: 50%;
  -webkit-transform: translateX(-50%) translateY(-50%);
  transform: translateX(-50%) translateY(-50%);
  min-width: 100%; 
  min-height: 100%; 
  width: auto; 
  height: auto;
  overflow: hidden;
}

.avatar-bordered {
  width: 55rpx;
  height: 55rpx;
  border-radius: 50%;
  box-shadow: 0 1px 2px rgba(0,0,0,0.2);
  border: white 1px solid;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: #fff; 
}

.tag {
  /* position: absolute;
