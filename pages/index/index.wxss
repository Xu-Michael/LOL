/* Cards */
 .card-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding: 20rpx;
} 

.gif-container {
  display: flex;
  flex-items: space-around;
  justify-content: center;
  flex-direction: column;
  width: 350rpx;
}

.gif-details {
  display: flex;
  flex-items: center;
  justify-content: center;
}

.card {
  height: 300rpx;
  width: 330rpx;
  text-shadow: 0 1rpx 3rpx rgba(0,0,0,0.8);
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
  margin: 10rpx; 
  position: relative;
  background: #fff;
   border-radius: 5px; 
   /* padding: 2em 0;  */
   /* box-sizing: border-box;  */
  transition: .3s ease;
  box-shadow: 0 3px 10px -2px rgba(0, 0, 0, 0.35);
}
.card > video {
  height: 300rpx;
  width: 350rpx;
  position: absolute;
  top: 0;
  border-radius: 5px;
}
