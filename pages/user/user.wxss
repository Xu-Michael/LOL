.user-container {
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background-size: fill;
  background-color: #00CED1;
}

.card-container {
  height: 40vh;
  width: 50vh;
  background-size: cover !important;
  background-position: center;
  color: "#8f959";
  position: relative;
  margin: 10rpx;
  background: #fff;
  border-radius: 5px;
  padding: 2em 0;
  box-sizing: border-box;
  transition: .3s ease;
  box-shadow: 0 3px 10px -2px rgba(0, 0, 0, 0.35);
  display: flex;
  align-items: center;
  justify-content: center;
}